  // Button styles
  const buttonStyles: React.CSSProperties = {
    padding: '0.5rem 1.25rem',
    borderRadius: '9999px',
    backgroundColor: '#3b82f6',
    color: 'white',
    border: 'none',
    cursor: 'pointer',
