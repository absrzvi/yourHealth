{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"]
    }
  },
  "include": [
    "lib/billing-agent/SimplifiedBillingAgent.ts",
    "lib/billing-agent/taskProcessors.ts"
  ]
}
